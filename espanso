matches:
  # Dates
  - trigger: ";date"
    replace: "{{mydate}}"
    vars:
      - name: mydate
        type: date
        params:
          format: "%m/%d/%Y"

  - trigger: ";now"
    replace: "{{mytime}}"
    vars:
      - name: mytime
        type: date
        params:
          format: "%H:%M"
 
  - trigger: ";tg"
    replace: "@mvrck96"

  - trigger: ";site"
    replace: "https://mvrck.space/"

  - trigger: ";channel"
    replace: "@maverick_notes"
